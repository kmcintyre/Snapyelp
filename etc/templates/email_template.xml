<html xmlns:t="http://twistedmatrix.com/ns/twisted.web.template/0.1">
<head>
	<title>Generic Mail</title>
	<meta http-equiv="content-type" content="text/html; charset=utf-8" />
	<meta name="description" content="blank"/>
	<meta name="keywords" content="blank"/>
</head>
<style type="text/css">
body {
	position: relative;
	min-height: 100%;
}

pre {
	white-space: pre-wrap;
	white-space: -moz-pre-wrap;
	white-space: -pre-wrap;
	white-space: -o-pre-wrap;
	word-wrap: break-word;
}

#top {
	background: none repeat scroll 0 0 #EEEEEE;
    border-bottom: 1px solid #CCCCCC;
    margin-bottom: 1em;
    min-height: 50px;
    text-align: center;
    line-height: 50px;
}

#info {
	position:absolute;
	top:50px;
	right:5px;
	width:250px;
	font-weight:200;
}

.envelope {
  width: 100%;
  display: table;
}

.split {
  display: table-cell;
  width: 50%;
}

.subject {
  padding-top:10px;
  padding-bottom:10px;
}

.payload {
    border: 2px groove #CCCCCC;
    padding: 0.35em 0.625em 0.75em;
}

.headers {
	font-size: .8em;
}

.subheader {
	margin-left:-10px;
	font-weight:bold;
}

.email {
    border: 2px solid #CCCCCC;
    margin: 1em auto;
    overflow: hidden;
    padding: 20px;
    width: 754px;
}

.multipart {
	width:100%;
	text-align: right;
	background-color: Silver
}
</style>

<body>
    <div id="top">
        <t:transparent t:render="pagehead" />
    </div>
    
  	<div class="email">  	
  	    <div class="envolope">  	 
	  	    <div class="split">  
		  	    <div class="subheader">to:</div>
		  	    	<div t:render="derived_to"/>
	  	    </div>
	  	    
	  	    <div class="split">
	  	    	<div class="subheader">from:</div>
	  	    		<div t:render="derived_from"/>
	  	    </div>	  	    	    	
  	    </div>
  	   
  	    <div class="subheader subject">
  	       	<t:transparent t:render="subject" />  	       	
  	       	<span style="float:right">
  	       	    <script>sd = new Date( parseInt(<t:transparent t:render="date"/>) * 1000); document.write(sd.toLocaleDateString())</script>
  	       	</span>
  	    </div>
  	    	
	  	<div t:render="message">
	  	    <div class="multipart">
	  	    	<span style="float:left"><t:slot name="filename"/></span> 
	  	    	<t:slot name="charset"/> 
	  	    	<t:slot name="content_type"/>
	  	    </div>
	  	    <div class="payload">	  	        
	  	        <t:slot name="body"/>
	  	    </div>
	  	</div>
	  	
	  	<div class="subheader">message headers:</div>
  	    <table class="headers">  	    
  	    <tr>
		<td>
			helo
		</td>
		<td>
			<t:transparent t:render="_helo" />	
		</td>
		</tr>
		<tr>
		<td>
			origin
		</td>
		<td>
			<t:transparent t:render="_origin" />	
		</td>		
		</tr>  	        
		<tr>
		<td>
			user
		</td>
		<td>
			<t:transparent t:render="_user" />
		</td>		
		</tr>		
  	   	<tr t:render="headers">
			<td>
				<t:slot name="key"/>
			</td>
			<td>
				<t:slot name="value"/>
			</td>
		</tr>
		</table>	  		  				  	    	
  	</div>  
</body>
</html>